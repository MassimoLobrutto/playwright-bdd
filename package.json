{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test:qa": "npx bddgen && cross-env ENV=qa npx playwright test",
    "test:uat": "npx bddgen && cross-env ENV=uat npx playwright test",
    "bddgen": "npx bddgen",
    "report": "npx http-server ./cucumber-report -c-1 -a localhost -o index.html",
    "watch:bdd": "nodemon -w ./src -e feature,ts --exec \"npx bddgen\"",
    "watch:pw": "playwright test --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "secretlint": "npx lint-staged",
    "sort-pkg": "sort-package-json"
  },
  "lint-staged": {
    "*": "secretlint --secretlintrc .secretlintrc.json --secretlintignore .secretlintignore "
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@secretlint/secretlint-rule-npm": "^11.3.1",
    "@secretlint/secretlint-rule-pattern": "^11.3.1",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.7.0",
    "eslint-plugin-prettier": "^5.5.5",
    "http-server": "14.1.1",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.8.1",
    "prettier-plugin-gherkin": "^3.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.992.0",
    "@aws-sdk/client-xray": "^3.992.0",
    "@faker-js/faker": "^10.3.0",
    "@percy/cli": "^1.31.8",
    "@percy/playwright": "^1.0.10",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
    "@types/cross-spawn": "^6.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/mssql": "^9.1.9",
    "@types/oracledb": "^6.10.1",
    "@types/semver": "^7.7.1",
    "@types/sinon": "^21.0.0",
    "browserstack-node-sdk": "^1.49.10",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^17.3.0",
    "hi-base32": "^0.5.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "mailosaur": "^11.0.0",
    "mocha": "^11.7.5",
    "mssql": "^12.2.0",
    "oracledb": "^6.10.0",
    "secretlint": "^11.3.1",
    "shelljs": "^0.10.0",
    "sinon": "^21.0.1",
    "sonarqube-scanner": "^4.3.4",
    "sort-package-json": "^3.6.1",

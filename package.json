{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test:qa": "npx bddgen && cross-env ENV=qa npx playwright test",
    "test:uat": "npx bddgen && cross-env ENV=uat npx playwright test",
    "bddgen": "npx bddgen",
    "report": "npx http-server ./cucumber-report -c-1 -a localhost -o index.html",
    "watch:bdd": "nodemon -w ./src -e feature,ts --exec \"npx bddgen\"",
    "watch:pw": "playwright test --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "secretlint": "npx lint-staged",
    "sort-pkg": "sort-package-json"
  },
  "lint-staged": {
    "*": "secretlint --secretlintrc .secretlintrc.json --secretlintignore .secretlintignore "
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.5.2",
    "http-server": "14.1.1",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.8.1",
    "prettier-plugin-gherkin": "^3.1.3",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.981.0",
    "@aws-sdk/client-xray": "^3.981.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@faker-js/faker": "^9.9.0",
    "@percy/cli": "^1.31.5",
    "@percy/playwright": "^1.0.10",
    "@secretlint/secretlint-rule-npm": "^11.2.4",
    "@secretlint/secretlint-rule-pattern": "^11.2.4",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
    "@types/cross-spawn": "^6.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/mssql": "^9.1.9",
    "@types/oracledb": "^6.9.1",
    "@types/semver": "^7.7.1",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "browserstack-node-sdk": "^1.45.2",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "hi-base32": "^0.5.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.0",
    "mailosaur": "^8.8.1",
    "mocha": "^11.7.2",
    "mssql": "^11.0.1",
    "oracledb": "^6.9.0",
    "secretlint": "^11.2.4",
    "shelljs": "^0.10.0",
    "sinon": "^21.0.0",
    "sonarqube-scanner": "^3.1.0",
    "sort-package-json": "^3.4.0",
    "ts-node": "^10.9.2",

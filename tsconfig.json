{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ES6", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha"]
  },

  "ts-node": {
    "esm": false
  },

  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "tests/**/*.ts", "playwright.config.ts", "eslint.config.mjs"]
}
